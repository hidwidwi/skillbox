shedule = {
    '1001': ['пн', 'вс'],
    '1231': ['пн', 'вт'],
    '1232': ['ср', 'чт', 'пт'],
    '1280': ['ср', 'пт', 'вс'],
    '1282': ['чт'],
    '1290': ['пт', 'вс'],
    '1303': ['вт', 'вс'],
}
unique_days = ['пн', 'вт', 'ср', 'чт', 'пт', 'сб', 'вс']
shedule_set1 = []
shedule_set = []
tmp = []
tmp1 = []
week = dict()
for j in shedule:
    shedule_set1.append(shedule[j])
for i in shedule_set1:
    tmp1.append(i)
    for j in tmp1:
        tmp = j
    for m in tmp:
        shedule_set.append(m)
print("В этот день никто не может дежурить:", set(unique_days).difference(shedule_set))

for i in shedule_set:
    if i not in week:
        week[i] = 0
    week[i] += 1
for day in unique_days:
    try:
        print(day, "-", week[day], end=" ")
    except KeyError:
        pass
